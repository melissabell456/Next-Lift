extends layout

block content
  for lift in results
    h1 #{lift.equip} #{lift.liftname}
    h2 Lift Stats:
      if(lift.liftdate != null)
        p  Last Date Performed: #{lift.liftdate}
        p  Weight: #{lift.weight}
        p  Reps Completed: #{lift.rep_count}
      else
        p No Lift History
    h2 Log a new lift:
    form(method='post', action='/log')
      p Date Completed:
        input(type="date" name="createdAt")
      p Weight:
        input(type="number", min="0" name="weight")
      p Reps Completed:
        input(type="number", min="1" name="rep_count")
      input(type="hidden" name="lift_id" value=lift.wkout_id)
      input(type="hidden" name="equipment_id" value=lift.equip_id)
      button(type='submit') Record Lift