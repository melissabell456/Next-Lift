extends layout

block content
  form(method='get', action='/search')
    input(type="hidden" name="column" value="name")
    input(type="search", name='term', placeholder="Search By Name", aria-label='Search')
    button(type='submit') Search
  for form in formAttributes
    form(method='get', action='/search')
        input(type="hidden" name="column" value=form.column)
        input(type="submit" name="term" value=form.value)
  if(state === "query")
    for lift in results
      include partials/lift-card