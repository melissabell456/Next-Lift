extends layout

block content

      div(class="form-group")
        form(method='post', action='/logSuggested', class="logLiftForm")
          button(type='submit' id="logSuggestedBtn") Record Lift
          input(placeholder="date of lift" type="date" class="form-control" required="true" name="createdAt")
          div(class="container")
            div(class="row")
              for lift in results
                div(class="col-sm-6")
                  h1 #{lift.equip} #{lift.liftname}
                  h2 Lift Stats:
                    if(lift.liftdate != null)
                      p  Last Date Performed: #{lift.liftdate}
                      p  Weight: #{lift.maxweight}
                      p  Reps Completed: #{lift.maxreps}
                    else
                      p No Lift History
                    h2 Log a new lift:
                      input(placeholder="weight (LBS)" type="number" class="form-control" min="0" name="weight" required="true")
                      input(placeholder="reps per set" type="number" class="form-control" min="1" name="rep_count" required="true")
                      input(type="hidden" class="form-control" name="lift_id" value=lift.wkout_id )
                      input(type="hidden" class="form-control" name="equipment_id" value=lift.equip_id)
                      input(type="hidden" class="form-control" name="suggested" value="true")