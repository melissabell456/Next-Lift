extends layout

block content
  h1 Edit
  for lift in results
    p #{lift.liftname}
    form(method='post', action='/update-entry')
      p Update Weight:
        input(required="true" default=lift.maxweight placeholder=lift.maxweight type="number" class="form-control" min="0" name="weight")
      p Update Reps Completed:
        input(required="true" default=lift.maxreps placeholder=lift.maxreps type="number" class="form-control" min="1" name="rep_count")
      p Change Date:
        input(required="true" default=lift.createdAt type="date" class="form-control" name="createdAt")
        input(type="hidden" class="form-control" name="user_lift_id" value=lift.user_lift_id)
        button(type='submit' class="btn btn-warning") Update